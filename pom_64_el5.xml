    <build>
        <plugins>
            <plugin>
                <groupId>org.freehep</groupId>
                <artifactId>freehep-nar-plugin</artifactId>
                <configuration>
                    <cpp>
                        <sourceDirectory>src</sourceDirectory>
                        <includePaths>
                            <includePath>include</includePath>
							<includePath>/users/opid00/test-ica/fl-ica/Lima/camera/maxipix/tools/src</includePath>
                        </includePaths>
                    </cpp>
					<linker>
					<libs>
						<lib>
							<!-- hdf5 (1.8.13) 64 -->
							<name>hdf5</name>
							<type>shared</type>
							<directory>/users/opid00/test-ica/fl-ica/hdf5-1.8.13/build/lib</directory>
						</lib>
						<lib>
							<!-- hdf5 (1.8.13) 64 -->
							<name>hdf5_cpp</name>
							<type>shared</type>
							<directory>/users/opid00/test-ica/fl-ica/hdf5-1.8.13/build/lib</directory>
						</lib>
						<lib>
							<!-- hdf5 (1.8.13) 64 -->
							<name>hdf5_hl</name>
							<type>shared</type>
							<directory>/users/opid00/test-ica/fl-ica/hdf5-1.8.13/build/lib</directory>
						</lib>
						<lib>
							<!-- hdf5 (1.8.13) 64 -->
							<name>hdf5_hl_cpp</name>
							<type>shared</type>
							<directory>/users/opid00/test-ica/fl-ica/hdf5-1.8.13/build/lib</directory>
						</lib>
                        <lib>
							<!-- INIReader () 64 -->
							<name>INIReader</name>
							<type>shared</type>
							<directory>/users/opid00/test-ica/fl-ica/Lima/camera/maxipix/tools/src</directory>
						</lib>
					</libs>
				   </linker>
                    <libraries>
                        <library>
                            <type>shared</type>
                        </library>
                    </libraries>
                    <specificConfigurations>
                        <specificConfiguration>
                            <id>win32 platform</id>
                            <activation>
                                <os>Windows</os>
                            </activation>
                            <cpp>
                                <defines>
                                    <define>LIBSIMULATOR_EXPORTS</define>
                                    <define>WIN32</define>
                                    <define>NDEBUG</define>
                                    <define>_WINDOWS</define>
                                    <define>_USRDLL</define>
                                    <define>_WIN32_WINNT=0x0502</define> <!-- For Windows XP Support -->
